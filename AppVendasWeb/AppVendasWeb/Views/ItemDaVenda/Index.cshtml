@model IEnumerable<AppVendasWeb.Models.ItemDaVenda>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-5 text-white my-5">Itens da Venda</h1>

<p>
    <a asp-action="Create" asp-route-id=@ViewData["VendaId"] class="btn btn-outline-light align-items-center d-inline-flex "> <svg class="me-3" bootstrap-icon="PlusCircle" width="16" height="16" aria-label="Plus Circle"></svg>ADICIONAR</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.ProdutoDescricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venda.NotaFiscal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td class="text-end">
                    <a class="btn text-success" asp-action="Edit" asp-route-id="@item.ItemDaVendaId"><svg bootstrap-icon="PencilSquare" width="24" height="24" aria-label="Delete"></svg></a>
                    <a class="btn text-info" asp-action="Details" asp-route-id="@item.ItemDaVendaId"><svg bootstrap-icon="InfoSquare" width="24" height="24" aria-label="Delete"></svg></a>
                    <a class="btn text-danger" asp-action="Delete" asp-route-id="@item.ItemDaVendaId"><svg bootstrap-icon="Trash" width="24" height="24" aria-label="Delete"></svg></a>
                </td>
            </tr>
        }
    </tbody>
</table>
