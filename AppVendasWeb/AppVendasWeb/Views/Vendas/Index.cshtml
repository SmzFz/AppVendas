@model IEnumerable<AppVendasWeb.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-5 text-white my-5">Vendas</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-light align-items-center d-inline-flex "> <svg class="me-3" bootstrap-icon="PlusCircle" width="16" height="16" aria-label="Plus Circle"></svg>ADICIONAR</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotaFiscal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataVenda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NotaFiscal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.ClienteNome)
                </td>
                <td class="text-end">
                    <a class="text-decoration-none link-light btn btn-outline-light" asp-controller="ItemDaVenda" asp-action="Index" asp-route-id="@item.VendaId">
                        <svg class="" bootstrap-icon="PlusCircle" width="16" height="16" aria-label="Plus Circle"></svg>
                    </a>
                    <a class="btn text-success" asp-action="Edit" asp-route-id="@item.VendaId"><svg bootstrap-icon="PencilSquare" width="24" height="24" aria-label="Delete"></svg></a>
                    <a class="btn text-danger" asp-action="Delete" asp-route-id="@item.VendaId"><svg bootstrap-icon="Trash" width="24" height="24" aria-label="Delete"></svg></a>
                </td>
            </tr>
        }
    </tbody>
</table>
